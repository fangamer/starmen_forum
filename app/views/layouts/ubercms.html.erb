  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_packs_with_chunks_tag 'ubercms', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'ubercms', 'data-turbolinks-track': 'reload' %>
